<div class="container">
  <div class="row">
    <h2> New Blog </h2>
  </div>

  <div class="row">
    <form action="/" method="post">
      <div class="row">

          <input type="text" name="blog[name]" placeholder="...title">

      </div>
      <div class="row">

          <textarea rows="6" cols="50" type="text" name="blog[body]" placeholder="...body"></textarea>

      </div>
      <input type="submit" value="New Blog Post">
    </form>
  </div>
</div>
