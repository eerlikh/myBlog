<div class="row">
  <h2> Make a new blog post </h2>
</div>

<div class="row">
  <form action="/" method="post">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <input type="text" name="blog[name]" placeholder="...title">
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <textarea rows="6" cols="50" type="text" name="blog[body]" placeholder="...body"></textarea>
      </div>
    </div>
    <input type="submit" value="New Blog Post">
  </form>
</div>
